<!--pages/index/continuation.wxml-->
<view class='pad20'>
    <view>请选择时长：{{min||0}}分钟</view>
    <picker-view indicator-style="height: 50px;" style="width: 100%; height: 200px; text-align: center" value="{{value}}" bindchange="bindChange">
        <picker-view-column>
            <view wx:for="{{mins}}" style="line-height: 50px">{{item}}</view>
        </picker-view-column>
    </picker-view>
    <view class='btns btns-biggest btns-green top20'>确定</view>
</view>
