<view>
    <ui-tabs index="{{ cIndex }}" bindchange="handleChange" ink-bar="true" ink-bar-style="{{inkBarStyle}}" _pid="{{_pid}}">
        <ui-tab wx:for="{{tabs}}" _pid="{{_pid}}">{{item}}</ui-tab>
    </ui-tabs>
    <view>
        <block wx:for="{{list}}">
            <view class="pad10 bor_btm_so relative">
                <view class="ui-row" style="">
                    <view class="ui-col" style="flex:0 0 50px;">
                        <view class="ui-col-content">
                            <image src="../../static/images/47.png" mode="aspectFill" class="tx6" />
                        </view>
                    </view>
                    <view class="ui-col" style="">
                        <view class="ui-col-content">
                            <view class="col333 font2 bold">{{item.itemNames}}</view>
                            <view class="top5 font0 col999">门店：{{item.storeName}}</view>
                            <view class="col999 font0">时间：{{item.orderStartTime}}</view>
                            <view class="col999 font0">技师：{{item.employeeNames}}</view>
                            <view class="col999 font0">总价：¥{{item.totalPrice}}</view>
                        </view>
                    </view>
                    <view class="ui-col ui-col-align-right align-right" style="flex:0 0 100px;">
                        <view class="ui-col-content align-right">
                            <view class="btns btns-2">{{tabs[item.status-1]}}</view>
                            <view class="top50 font0" wx:if='{{item.orderStartTime && item.status==1}}'>
                                <ui-count-down class="inline" doneText='0s' time="{{item.orderStartTime2}}" number-style="{{numberStyle}}" format="{%h}:{%m}:{%s}" _pid="{{_pid}}"></ui-count-down>
                                后自动取消
                            </view>
                            <view bindtap='pay' class="btns btns-green-bor top5 btns-small" data-outtradeno='{{item.outTradeNo}}' wx:if='{{item.status==1}}'>继续支付</view>
                            <view bindtap='removeOrder' data-outtradeno='{{item.outTradeNo}}' class="btns btns-green-bor top5 btns-small" wx:if='{{item.status==2}}'>取消订单</view>
                        </view>
                    </view>
                </view>
            </view>
        </block>
        <view wx:if="{{!list.length}}" class="center top40 ">
            <image src='../../static/images/9.png' class='inline' style='width: 60rpx; height: 60rpx; opacity: 0.4; filter: grayscale(100%);'></image>
            <view class='col999'>暂无数据</view>
        </view>
    </view>
</view>